<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/share_to_weichat_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到微信" />

    <Button
        android:id="@+id/share_to_weichat_timeline_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到微信朋友圈" />

    <Button
        android:id="@+id/share_to_qq_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到QQ" />

    <Button
        android:id="@+id/share_to_qqzone_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到QQ空间" />

    <Button
        android:id="@+id/share_to_weibo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享到微博" />

</LinearLayout>