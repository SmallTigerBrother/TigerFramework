<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/mjet_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"/>

    <ImageView
        android:id="@+id/mjet_tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_below="@id/mjet_tab_text"
        android:layout_marginBottom="4dip"
        android:contentDescription="@string/mjet_app_name"/>
    
    <ImageView
         android:id="@+id/mjet_tab_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mjet_tab_text"
        android:layout_alignTop="@id/mjet_tab_text"
        android:visibility="gone"
        android:contentDescription="@string/mjet_app_name"
        />
    
</RelativeLayout>