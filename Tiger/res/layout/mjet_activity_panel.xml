<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mjet_panel_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mjet_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mjet_nav_bg_red"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.huawei.mjet.widget.MPImageButton
            android:id="@+id/mjet_bar_button_left"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/mjet_left_button_selector_red"
            android:contentDescription="@string/mjet_app_name"
            android:gravity="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mjet_bar_title_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/mjet_white"
            android:textSize="20sp" >
        </TextView>

        <LinearLayout
            android:id="@+id/mjet_favourite"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1.5"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/mjet_checkBoxfa"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" >
            </CheckBox>
        </LinearLayout>

        <com.huawei.mjet.widget.MPImageButton
            android:id="@+id/mjet_bar_button_right"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/mjet_right_button_selector_red"
            android:contentDescription="@string/mjet_app_name"
            android:gravity="center"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mjet_panel_content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>